<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20sp"
    tools:context=".Sale.EditSaleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:fontFamily="@font/font_baemin5"
            android:text="식당 식재료 수정" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"
            android:layout_marginBottom="10sp"/>

        <ImageView
            android:id="@+id/edit_product_rest_imageView_product"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:src="@drawable/upload"
            android:layout_gravity="start"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"
            android:layout_marginBottom="10sp"/>


        <EditText
            android:id="@+id/edit_product_rest_editText_title"
            android:hint="제목"
            android:fontFamily="@font/font_baemin5"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"
            android:layout_marginBottom="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/edit_product_rest_spinner_categoryA"
                android:entries="@array/대분류"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/font_baemin5"
                />

            <Spinner
                android:id="@+id/edit_product_rest_spinner_categoryB"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:fontFamily="@font/font_baemin5"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <EditText
                android:id="@+id/edit_product_rest_editText_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="양 (g)"
                android:layout_weight="1"
                android:fontFamily="@font/font_baemin5"
                android:textSize="30sp"
                android:background="@null"/>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#D3D3D3" />

            <EditText
                android:id="@+id/edit_product_rest_editText_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:hint="수량 (개)"
                android:layout_weight="1"
                android:fontFamily="@font/font_baemin5"
                android:textSize="30sp"
                android:background="@null"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"
            android:layout_marginBottom="10sp"/>



        <Button
            android:id="@+id/edit_product_rest_button_expireDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/iconfinder_calendar"
            android:background="@android:color/transparent"
            android:onClick="OnClickHandler"
            android:hint="유통기한"
            android:fontFamily="@font/font_baemin5"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"
            android:layout_marginBottom="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp">

            <TextView
                android:id="@+id/edit_product_rest_textView_quality"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="50sp"
                android:fontFamily="@font/font_baemin5"
                />

            <Button
                android:id="@+id/edit_product_rest_button_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="품질 기준"
                android:fontFamily="@font/font_baemin5"
                android:background="@drawable/bin_blue"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"
            android:layout_marginBottom="10sp"/>

        <!--장소는 본인의 위치를 기반으로 하기에 빼도 된다고 생각한다.-->

        <EditText
            android:id="@+id/edit_product_rest_editText_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:hint="가격"
            android:fontFamily="@font/font_baemin5"
            android:background="@null"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"/>
        <EditText
            android:id="@+id/edit_product_rest_editText_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingBottom="50sp"
            android:hint="상세설명"
            android:fontFamily="@font/font_baemin5"
            android:background="@null"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"
            android:layout_marginBottom="10sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10sp">

            <Button
                android:id="@+id/edit_product_rest_button_fast"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="급처 기능"
                android:fontFamily="@font/font_baemin5"
                android:background="@drawable/bin_blue"
                android:textColor="#ffffff"
                android:layout_marginRight="30sp"/>

            <View
                android:layout_width="2sp"
                android:layout_height="50sp"
                android:layout_centerInParent="true"
                android:background="#D3D3D3"/>

            <Button
                android:id="@+id/edit_product_rest_button_submit"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="수정 완료"
                android:fontFamily="@font/font_baemin5"
                android:background="@drawable/bin_blue"
                android:textColor="#ffffff"
                android:layout_marginLeft="30sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/edit_product_rest_TextView_txtResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    </LinearLayout>


</ScrollView>