<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="카테고리    "
            android:fontFamily="@font/font_baemin5"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="양  "
            android:fontFamily="@font/font_baemin5"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="유통기한  "
            android:fontFamily="@font/font_baemin5"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="품질  "
            android:fontFamily="@font/font_baemin5"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="가격  "
            android:fontFamily="@font/font_baemin5"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="123sp"
            android:fontFamily="@font/font_baemin5"
            android:text="지도  "
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="상세설명  "
            android:fontFamily="@font/font_baemin5"
            android:textSize="20sp"
            android:paddingBottom="200sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/productInfo_textView_categoryBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="내용"
            android:fontFamily="@font/font_baemin5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/productInfo_textView_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="내용"
            android:fontFamily="@font/font_baemin5"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/productInfo_textView_expiredDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="내용"
            android:fontFamily="@font/font_baemin5"
            android:textSize="20sp"
            />

`
        <TextView
            android:id="@+id/productInfo_textView_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="내용"
            android:fontFamily="@font/font_baemin5"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/productInfo_textView_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="내용"
            android:fontFamily="@font/font_baemin5"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10sp">
            <RelativeLayout
                android:id="@+id/productInfo_map_view"
                android:layout_width="250sp"
                android:layout_height="150sp"
                android:background="@drawable/tae"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/productInfo_textView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="내용"
            android:fontFamily="@font/font_baemin5"
            android:textSize="20sp"
            android:paddingBottom="200sp"
            />

    </LinearLayout>
</LinearLayout>