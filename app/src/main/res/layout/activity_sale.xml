<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SaleActivity">

    <TextView
        android:id="@+id/saleActivity_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제품 사진"
        android:textSize="40dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>


    <ImageView
        android:id="@+id/saleActivity_imageView_product"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/icon_image_searching"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/saleActivity_imageView_user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/user"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/saleActivity_textView_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="판매자 이름" />

            <TextView
                android:id="@+id/saleActivity_textView_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="동네" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="카테고리 : "
           android:textSize="20dp"
           android:layout_marginTop="10dp"
           />

       <TextView
           android:id="@+id/saleActivity_textView_categoryBig"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="카테고리"
           android:textSize="20dp"
           android:layout_marginTop="10dp"
           />
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양 : "
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/saleActivity_textView_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="양"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유통기한 : "
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/saleActivity_textView_expiredDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="유통기한"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="품질 : "
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/saleActivity_textView_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="품질"
            android:textSize="20dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세설명 : "
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/saleActivity_textView_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="상세설명"
            android:textSize="20dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/saleActivity_button_subscription"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/bin_blue"
            android:text="구독!"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#D3D3D3"/>

        <Button
            android:id="@+id/saleActivity_button_buy"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/bin_blue"
            android:text="구매"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/saleActivity_button_chat"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/bin_blue"
            android:text="채팅"
            android:textColor="#ffffff"
            android:textStyle="bold" />



    </LinearLayout>

</LinearLayout>