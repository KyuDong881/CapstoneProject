<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/saleActivity_textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제품 사진"
            android:textSize="40sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"/>


        <ImageView
            android:id="@+id/saleActivity_imageView_product"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:src="@drawable/icon_image_searching"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp">

            <ImageView
                android:id="@+id/saleActivity_imageView_user"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/user"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/saleActivity_textView_salesman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="판매자" />

                <TextView
                    android:id="@+id/saleActivity_textView_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="동네" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10sp"
            android:background="#D3D3D3"/>



        <TextView
            android:id="@+id/saleActivity_textView_categoryBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            />


        <TextView
            android:id="@+id/saleActivity_textView_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="양"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/saleActivity_textView_expiredDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="유통기한"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/saleActivity_textView_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="품질"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/saleActivity_textView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="상세설명"
            android:textSize="20sp"
            android:paddingBottom="130sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/saleActivity_button_subscription"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:background="@drawable/bin_blue"
                android:text="구독!"
                android:layout_marginLeft="10sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="50sp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="#D3D3D3" />

            <Button
                android:id="@+id/saleActivity_button_buy"
                android:layout_width="60sp"
                android:layout_height="50sp"
                android:background="@drawable/bin_blue"
                android:text="구매"
                android:layout_marginLeft="50sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/saleActivity_button_chat"
                android:layout_width="60sp"
                android:layout_height="50sp"
                android:background="@drawable/bin_blue"
                android:text="채팅"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="20sp"/>

            <Button
                android:id="@+id/test_ratingbtn"
                android:layout_width="60sp"
                android:layout_height="50sp"
                android:background="@drawable/bin_blue"
                android:text="평가"
                android:visibility="invisible"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"/>
    </LinearLayout>

</ScrollView>