<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="프로필"
        android:fontFamily="@font/font_baemin"
        android:textStyle="bold"
        >

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profile_textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="유저이름"
                android:fontFamily="@font/font_baemin"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/account_textView_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_baemin"
                android:text="동네"
                android:textSize="15sp"
                android:layout_margin="5sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profile_textView_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등급"
                android:fontFamily="@font/font_baemin"
                android:textSize="15sp"
                android:layout_margin="5sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_centerInParent="true"
            android:background="#D3D3D3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/profile_button_ban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신고하기"
                android:fontFamily="@font/font_baemin"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="00#ffffff"
                android:layout_margin="5sp"/>

            <Button
                android:id="@+id/profile_button_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_baemin"
                android:text="판매물품보기"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="00#ffffff"
                android:layout_margin="5sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>

</LinearLayout>