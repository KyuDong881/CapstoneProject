<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    tools:context=".ProductUploadActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="사진 등록하기" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>

    <ImageView
        android:id="@+id/saleActivity_imageView_product"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/icon_image_searching"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>


    <EditText
        android:id="@+id/product_upload_editText_title"
        android:text="제목"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/product_upload_spinner_categoryA"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <Spinner
            android:id="@+id/product_upload_spinner_categoryB"
            android:layout_width="150dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="양(상세히 서술해주세요)"/>


    <EditText
        android:id="@+id/product_upload_editText_expireDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="유통기한" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/product_upload_spinner_quality"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            />

        <Button
            android:id="@+id/product_upload_button_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="품질 기준"
            android:background="@drawable/bin_blue"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>

    <Spinner
        android:id="@+id/product_upload_spinner_until"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3"/>

<!--장소는 본인의 위치를 기반으로 하기에 빼도 된다고 생각한다.-->

    <EditText
        android:id="@+id/product_upload_editText_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상세설명"/>

    <Button
        android:id="@+id/product_upload_button_submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="제출하기"
        android:background="@drawable/bin_blue"
        android:textColor="#ffffff"
        android:layout_gravity="center"/>






</LinearLayout>