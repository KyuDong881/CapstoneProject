<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/ResInfoFragment_imageview_profile"
        android:src="@drawable/chef"
        android:layout_width="match_parent"
        android:layout_height="200sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="식당명    "
                android:fontFamily="@font/font_baemin5"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="전화번호  "
                android:fontFamily="@font/font_baemin5"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="픽업시작시간  "
                android:fontFamily="@font/font_baemin5"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="픽업마감시간  "
                android:fontFamily="@font/font_baemin5"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="주소  "
                android:fontFamily="@font/font_baemin5"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/font_baemin5"
                android:paddingBottom="100sp"
                android:text="설명  "
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ResInfoFragment_textView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:hint="내용"
                android:fontFamily="@font/font_baemin5"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ResInfoFragment_textView_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:hint="내용"
                android:fontFamily="@font/font_baemin5"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/ResInfoFragment_textView_pickupstarttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:hint="내용"
                android:fontFamily="@font/font_baemin5"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/ResInfoFragment_textView_pickupendtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:hint="내용"
                android:fontFamily="@font/font_baemin5"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/ResInfoFragment_textView_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="내용"
                android:fontFamily="@font/font_baemin5"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/ResInfoFragment_textView_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:hint="내용"
                android:fontFamily="@font/font_baemin5"
                android:textSize="20sp"
                android:paddingBottom="100sp"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>