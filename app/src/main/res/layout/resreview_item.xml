<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5sp">


    <TextView
        android:id="@+id/resreview_item_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#00ffffff"
        android:fontFamily="@font/font_baemin5"
        android:text="유저 이름" />

    <RatingBar
        android:id="@+id/resreview_item_ratingBar_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        />

    <TextView
        android:id="@+id/resreview_item_textView_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:background="#00ffffff"
        android:fontFamily="@font/font_baemin5"
        android:text="리뷰" />

    <TextView
        android:id="@+id/resreview_item_textView_categorysmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:padding="5dp"
        android:background="@drawable/bin_blue"
        android:fontFamily="@font/font_baemin5"
        android:text="상품" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>
</LinearLayout>